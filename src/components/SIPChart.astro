---
const { data } = Astro.props;
---
<canvas id="sipChart" data-sip={JSON.stringify(data)} width="400" height="200"></canvas>
<script type="module" client:load>
  import Chart from 'chart.js/auto';
  const ctx = document.getElementById('sipChart');
  const chartData = JSON.parse(ctx.getAttribute('data-sip'));
  new Chart(ctx, {
    type: 'line',
    data: {
      labels: chartData.years,
      datasets: [{ label: 'Investment Value (â‚¹)', data: chartData.values, fill: true, borderWidth: 2 }]
    }
  });
</script>
